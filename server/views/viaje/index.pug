extends ../layout/index

block contenido
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p
                    i.icon-calendar
                        |   Fecha Ida: #{viaje.fecha_ida} - Fecha Vuelta: #{viaje.fecha_vuelta}
                p
                    i.icon-dollar
                        |  #{viaje.precio}
                p
                    i.icon-user
                        |  #{viaje.disponiles} Disponibles
                p= viaje.descripcion